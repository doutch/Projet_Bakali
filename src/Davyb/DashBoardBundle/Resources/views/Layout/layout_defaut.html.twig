	<body>
		<section id="container" >
			 <header class="header black-bg">
			 
			 	<!-- Bouton toggle d'apparition du menu ou non -->
				<div class="sidebar-toggle-box">
                	<div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
              	</div>
              	
              	<!-- Logo -->
              	<a href="/" class="logo"><b>DASHBOARD PERSO</b></a>
              	
              	<!-- Affichage connexion / D√©connexion -->
              	<div class="top-menu">
            		<ul class="nav pull-right top-menu">
            			{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    		Connect√© en tant que {{ app.user.username }} - <li><a class="logout" href="{{ path('fos_user_security_logout') }}">D√©connexion</a></li>
                    	{% else %}
                    		<li><a class="logout" href="{{ path('fos_user_security_logout') }}">Déconnexion</a></li>
                    	{% endif %}
            		</ul>
            	</div>
            </header>
            
            <!-- Menu + photo profil -->
            <aside>
            	<div id="sidebar"  class="nav-collapse ">
            		
            		<div class = 'menu_profil'>
	            		<p class="centered"><a href="profile.html"><img src="{{ asset('bundles/theme/img/dashboard/ui-sam.jpg') }}" class="img-circle" width="60"></a></p>
		              	<h5 class="centered">{{ app.user.username }}</h5>
		            </div>
            	
	            	<!-- sidebar menu start-->
					{{ knp_menu_render('DashBoardBundle:MenuBuilder:mainMenu', {'currentClass': 'active', 'template': 'DashBoardBundle:Menu:knp_menu.html.twig'}) }}
            </aside>
            
            <!-- Contenu principal -->
            <section id="main-content">
            
            	{% block content %}{% endblock %}
            </section>
            
            <!--footer start-->
	      	<footer class="site-footer">
	        	<div class="text-center">
	            	<i class="fa fa-copyright"></i>
	            	{{ 'now'|date('Y') }} - Site Bakali
	              	<a href="index.html#" class="go-top">
	                	<i class="fa fa-angle-up"></i>
	              	</a>
	          	</div>
	      	</footer>
				
		</section>
		
		<!-- JS -->
		
		<!-- Jquery -->
		<script type="text/javascript" src = "{{ asset('bundles/theme/js/jquery-2.1.1.min.js') }}"></script>
		
		<!-- Bootstrap -->
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
		
		<script class="include" type="text/javascript" src= "{{ asset('bundles/theme/js/jquery.dcjqaccordion.2.7.js') }}"></script>

          	<div class="col-lg-8">
            	{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
          	</div>
        </div>
        	
        <div class="form-group">
        	
          	<label class="col-md-3 control-label"></label>
          		
          	<div class="col-md-8">
            		{{ form_widget(form.Enregistrer, {'attr': {'class': 'btn btn-primary'}}) }}
          	</div>
        </div>
    </div>
    
